---
interface Props {
  item: {
    year: string;
    company: string;
    role: string;
    description: string;
    achievement: string;
    color: string;
    technologies: string[];
  };
  index: number;
  technologiesUsedText: string;
}

const { item, index, technologiesUsedText } = Astro.props;
---

<div class="relative">
  <!-- Timeline Item -->
  <div class="flex items-start gap-8 group">
    <!-- Timeline Dot & Line -->
    <div class="flex flex-col items-center">
      <!-- Dot -->
      <div class={`w-6 h-6 bg-gradient-to-r ${item.color} rounded-full border-4 border-white dark:border-gray-800 shadow-lg group-hover:scale-125 transition-transform duration-300 z-10`}></div>
      <!-- Line (only if not last item) -->
      <div class="w-1 h-24 bg-gradient-to-b from-orange-300 to-orange-500 dark:from-gray-600 dark:to-gray-800 mt-2"></div>
    </div>
    
    <!-- Content -->
    <div class="flex-1 pb-16">
      <!-- Year Badge -->
      <div class="flex items-center gap-4 mb-4">
        <div class={`px-4 py-2 bg-gradient-to-r ${item.color} text-white rounded-full text-sm font-bold shadow-md`}>
          {item.year}
        </div>
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-green-600 dark:text-green-400 font-semibold text-sm">{item.achievement}</span>
        </div>
      </div>
      
      <!-- Role & Company -->
      <div class="mb-4">
        <h3 class="text-2xl font-bold text-primary mb-1">{item.role}</h3>
        <h4 class="text-lg text-orange-600 dark:text-orange-400 font-semibold">{item.company}</h4>
      </div>
      
      <!-- Description -->
      <p class="text-secondary leading-relaxed mb-6">{item.description}</p>
      
      <!-- Technologies -->
      <div>
        <h5 class="text-sm font-semibold text-primary mb-3">üõ†Ô∏è {technologiesUsedText}</h5>
        <div class="flex flex-wrap gap-2">
          {item.technologies.map((tech) => (
            <span class="px-3 py-1 bg-gradient-to-r from-orange-100 to-orange-200 dark:from-gray-700 dark:to-gray-600 border border-orange-300 dark:border-gray-600 text-orange-800 dark:text-orange-200 rounded-full text-xs font-medium hover:scale-105 transition-transform duration-200">
              {tech}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</div>
