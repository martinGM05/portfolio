---
interface Props {
  stat: {
    number: string;
    label: string;
    icon: string;
  };
  isHighlight?: boolean;
}

const { stat, isHighlight = false } = Astro.props;
---

<div class="text-center group">
  <div class={`${isHighlight ? 'bg-white/10 backdrop-blur-sm rounded-3xl p-8 border border-white/20 hover:bg-white/20' : 'bg-primary/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg hover-lift border border-primary'} transition-all duration-300 hover-lift`}>
    <div class={`${isHighlight ? 'text-6xl mb-6' : 'text-4xl mb-3'} group-hover:scale-110 transition-transform duration-300`}>{stat.icon}</div>
    <div class={`${isHighlight ? 'text-5xl font-bold text-white mb-3' : 'text-3xl font-bold text-primary mb-1'}`}>{stat.number}</div>
    <div class={`${isHighlight ? 'text-lg text-white/90 font-medium' : 'text-sm text-secondary'}`}>{stat.label}</div>
  </div>
</div>
