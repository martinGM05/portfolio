---
interface Props {
  badge: string;
  title: string;
  titleHighlight: string;
  titleEnd?: string;
  subtitle: string;
  badgeIcon?: string;
  gradientFrom: string;
  gradientTo: string;
}

const { 
  badge, 
  title, 
  titleHighlight, 
  titleEnd = '', 
  subtitle, 
  badgeIcon = '',
  gradientFrom,
  gradientTo 
} = Astro.props;
---

<div class="text-center mb-24">
  <div class={`inline-block px-6 py-3 bg-gradient-to-r ${gradientFrom} ${gradientTo} text-white rounded-full text-lg font-semibold mb-8`}>
    {badgeIcon} {badge}
  </div>
  <h2 class="text-5xl lg:text-7xl font-bold text-primary mb-8">
    {title} <span class={`bg-gradient-to-r ${gradientFrom} ${gradientTo} bg-clip-text text-transparent`}>{titleHighlight}</span> {titleEnd}
  </h2>
  <p class="text-2xl text-secondary max-w-4xl mx-auto leading-relaxed">
    {subtitle}
  </p>
</div>
